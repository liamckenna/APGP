mtllib default.mtl

# Vertices
v -0.5 -0.5 -0.5  # v1
v  0.5 -0.5 -0.5  # v2
v  0.5  0.5 -0.5  # v3
v -0.5  0.5 -0.5  # v4
v -0.5 -0.5  0.5  # v5
v  0.5 -0.5  0.5  # v6
v  0.5  0.5  0.5  # v7
v -0.5  0.5  0.5  # v8

# Texture Coordinates (same for each face)
vt 0.0 0.0
vt 1.0 0.0
vt 0.0 1.0
vt 1.0 1.0



